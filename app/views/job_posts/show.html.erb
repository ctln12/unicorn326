<h4><p><%=  @job_post.title %></h4></p>
  <%= "Subject:" %> <%= Subject.find(@job_post.subject_id).name %><br>
  <%= "Language:" %> <%= Language.find(@job_post.language_id).name %><br>
  <%= "Currency:" %> <%= Currency.find(@job_post.currency_id).name %><br>
  <%= "Amount:" %> <%= @job_post.amount %><br>
  <hr>
  <%= @job_post.description %><br>
  <br>
  <%= "Posted " + distance_of_time_in_words(Time.now, @job_post.created_at) + " ago by " + "#{Student.find(@job_post.student_id).first_name}" + " " +"#{Student.find(@job_post.student_id).last_name[0]}" + "."%><br>
  <br>
  <% if current_tutor %>
  <% elsif current_student && current_student.id == @job_post.student_id %>
    <%= link_to "Edit", edit_job_post_path, class: "btn btn-primary"%><span>
    <%= link_to "Delete", job_post_path, method: :delete, class: "btn btn-primary"%><span>
    <%= link_to "See all requests", job_posts_path, class: "btn btn-primary"%><br>
  <% else %>
    <%= link_to "Reply", new_tutor_registration_path, class: "btn btn-primary"%><br>
  <% end %>
  <hr>
  <%= pluralize(@job_post.comments.count, 'Reply') %><br>
  <hr>
  <%= render @job_post.comments %><br>
  <% if current_tutor  %>
    <%= "Reply to thread"%>
    <%= render "comments/form" %>
  <% elsif current_student && current_student.id == @job_post.student_id %>
    <%= "Your post is now online and shared with tutors corresponding to your criteria" %><br>
    <br>
  <% else %>
    <hr>
    <%= "Only Tutors may reply to thread" %><br>
    <hr>
  <% end %>

