<%= comment.content %> <br>
<%= "Posted " + distance_of_time_in_words(Time.now, comment.created_at) + " ago by " + "#{Tutor.find(comment.tutor_id).first_name}" + " " +"#{Tutor.find(comment.tutor_id).last_name[0]}" + "."%> <br>
<% if current_student && current_student.id == @job_post.student_id %>
  <%= link_to "Tutor Profile", tutor_path(comment.tutor_id), class: "btn btn-primary"%> <span>
  <%= link_to " Private Chat", class: "btn btn-primary"%> <span>
<% elsif current_tutor && current_tutor.id == comment.tutor_id %>
  <%= link_to "Edit", edit_job_post_comment_path(@job_post, comment), class: "btn btn-primary"%><span>
  <%= link_to "Delete", job_post_comment_path(@job_post, comment), method: :delete, class: "btn btn-primary"%> <br>
<% else %>
  <%= link_to "Reply", new_tutor_registration_path, class: "btn btn-primary"%> <br>
<% end %>
