<div class="session-form-container">

  <ul class="nav nav-tabs">
    <li class="nav-item w-50">
      <a class="nav-link active" href="<%= new_student_session_path %>">
        <h3>Login as a student</h3>
      </a>
    </li>
    <li class="nav-item w-50">
      <a class="nav-link" href="<%= new_tutor_session_path %>">
        <h3>Login as a tutor</h3>
      </a>
    </li>
  </ul>

  <div class="session-form">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Login", class: "btn btn-form" %>
      </div>
    <% end %>

    <%= render "students/shared/links" %>
  </div>
</div>
