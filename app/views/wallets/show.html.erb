<div style="margin: 3rem auto; width: 90%;" class="container">
  <h1 style="display: flex; justify-content: space-between; margin-bottom: 2rem;">
    <span>Current Balance</span>
    <span><%= @wallet.amount %> <%= @tutor.currency.name %></span>
  </h1>

  <div style="margin-bottom: 20px; padding: 20px 15px; border-radius: 4px; color: #525252;" class="row">
    <div class="col-3"><h6 style="margin: 0;">Lessons</h6></div>
    <div class="col-3"><h6 style="margin: 0;">Date & Time</h6></div>
    <div class="col-2 text-right"><h6 style="margin: 0;">Price</h6></div>
    <div class="col-2 text-right"><h6 style="margin: 0;">Quantity</h6></div>
    <div class="col-2 text-right"><h6 style="margin: 0;">Amount</h6></div>
  </div>

  <% @bookings.each do |booking| %>
    <div style="background-color: white; margin-bottom: 20px; padding: 20px 15px; border-radius: 4px; box-shadow: 1px 2px 3px #cecece;" class="row">
      <div class="col-3">
        <h5 class="lesson-color <%= booking.subject.name.downcase %>" style="font-weight: bold"><%= booking.subject.name %></h5>
        <span style="color: #4c4c4c"><%= booking.student.first_name %> <%= booking.student.last_name %></span>
      </div>
      <div class="col-3">
        <h5 style="font-weight: bold"><%= booking.date.strftime("%a %-d %B %Y") %></h5>
        <span style="color: #4c4c4c"><%= booking.start_time.strftime("%H:%M") %> - <%= booking.end_time.strftime("%H:%M") %></span>
      </div>
      <div class="col-2 text-right"><p style="line-height: 1.3; font-size: 1.1rem;"><%= @tutor.price %> <%= @tutor.currency.name %></p></div>
      <div class="col-2 text-right"><p style="line-height: 1.3; font-size: 1.1rem;"><%= (booking.end_time - booking.start_time) / 3600 %> h</p></div>
      <div class="col-2 text-right"><h5 style="font-weight: bold"><%= booking.booking_price %> <%= @tutor.currency.name %></h5></div>
    </div>
  <% end %>

  <div style="margin-bottom: 20px; padding: 20px 15px; border-radius: 4px; " class="row">
    <div class="col-3"></div>
    <div class="col-3"></div>
    <div class="col-2 text-right"></div>
    <div class="col-2 text-right"><h4 style="font-weight: bold">TOTAL</h4></div>
    <div class="col-2 text-right"><h4 style="font-weight: bold"><%= @wallet.amount %> <%= @tutor.currency.name %></h4></div>
  </div>
</div>
