<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to "Find a tutor", tutors_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Job posts", job_posts_path, class: "nav-link" %>
        </li>
      <% if student_signed_in? || tutor_signed_in? %>
        <li class="nav-item">
          <% if current_tutor %>
            <%= link_to "My profile", profile_tutors_path, class: "nav-link" %>
          <% else %>
            <%= link_to "My profile", edit_student_registration_path, class: "nav-link" %>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to "Lessons", bookings_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <% if current_tutor %>
            <%= link_to "Wallet", tutor_wallet_path(current_tutor, current_tutor.wallets.first.id), class: "nav-link" %>
          <% end %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <%= current_tutor.first_name unless current_tutor.nil? %>
          <%= current_student.first_name unless current_student.nil? %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_student_session_path || destroy_tutor_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login as Student", new_student_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Login as Tutor", new_tutor_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
