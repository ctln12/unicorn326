<h2>Tutor Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "first-name" }%>
    <%= f.input :last_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "last-name" }%>
    <%= f.input :date_of_birth, as: :date, start_year: Date.today.year - 90, end_year: Date.today.year - 12, order: [:day, :month, :year],
                required: true,
                autofocus: true,
                input_html: { autocomplete: "date-of-birth" }%>
    <%= f.input :phone_number,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "phone-number" }%>
    <%= f.input :photo_url,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "photo-url" }%>
    <%= f.input :subjects,
                collection: ['Mathematics', 'English', 'Custom'],
                required: true,
                autofocus: true,
                input_html: { autocomplete: "subjects" }%>
    <%= f.input :spoken_languages,
                collection: ['English', 'German', 'French'],
                required: true,
                autofocus: true,
                input_html: { autocomplete: "spoken-languages" }%>
    <%= f.input :currency,
                collection: ['CHF', 'EUR', 'USD'],
                required: true,
                autofocus: true,
                input_html: { autocomplete: "currency" }%>
    <%= f.input :price,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "price" }%>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up as Tutor" %>
  </div>
<% end %>

<%= render "tutors/shared/links" %>
