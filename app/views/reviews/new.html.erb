<%= simple_form_for [@booking, @review] do |f| %>

  <div id="rating-form">
    <label>Rating</label>
  </div>

  <%= f.input :comment %>

  <%= f.submit "add a review", class: "btn btn-primary" %>

<% end %>

<script>
  jQuery(function () {
    $('#rating-form').raty({
      path: '/assets/',
      scoreName: 'review[rating]'
    });
  });
</script>
